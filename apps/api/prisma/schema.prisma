generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model User {
  /// Firebase Auth の uid をそのまま主キーにする
  id          String   @id
  displayName String?
  email       String?  @unique
  avatarUrl   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  projects    Project[]
}

/// TRPGシナリオプロジェクト
model Project {
  id        Int      @id @default(autoincrement())
  ownerId   String
  title     String
  summary   String?          // 一行説明
  isPublic  Boolean  @default(false) // 公開/非公開
  // 将来: tags, clonedFromProjectId, treeJson など増やす

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner     User     @relation(fields: [ownerId], references: [id])
}